@model CatalogViewModel
@{
    ViewBag.Title = "Products";
}

<section id="advertisement">
    <div class="container">
        <img src="~/Images/shop/advertisement.jpg" alt="" />
    </div>
</section>

<section>
    <div class="container">
        <vc:bread-crumbs/>
        <div class="row">
            <div class="col-sm-3">
                <div class="left-sidebar">
                    <h2>Category</h2>
                    <partial name="~/Views/Shared/Partial/_LeftSideBar.cshtml" />
                </div>
            </div>

            <div class="col-sm-9 padding-right">
                <partial name="Partial/_FeaturesItems" model="Model.Products" />

                <pageing page-model="Model.PageViewModel"
                         page-action="Index"
                         page-url-SectionId="@Model.SectionId"
                         page-url-BrandId="@Model.BrandId"
                         page-url-PageSize="@Context.Request.Query["PageSize"]">
                </pageing>
            </div>
        </div>
    </div>
</section>
